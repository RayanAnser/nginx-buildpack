worker_processes auto;
daemon off;

events {
    worker_connections  1024;
}

http {
    client_max_body_size 500m;  # Limite la taille maximale du corps de la requête

    server {
        server_name localhost;
        listen <%= ENV['PORT'] %>;

        charset utf-8;

        root app/public;

        # Serve static assets
        location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            root app/public;
            expires max;
            add_header Cache-Control public;
            try_files $uri =404;
        }

        # Serve HTML files
        location / {
            try_files $uri/index.html $uri @app;
        }

        # Handle requests to the app (forward to your application server)
        location @app {
            proxy_pass http://localhost:3000;  # Ajustez le port si nécessaire
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
